# =============================================================================
# Naked Pineapple Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# STOREFRONT CONFIGURATION
# =============================================================================

STOREFRONT_DATABASE_URL=postgres://user:pass@localhost/np_storefront
STOREFRONT_HOST=127.0.0.1
STOREFRONT_PORT=3000
STOREFRONT_BASE_URL=http://localhost:3000
STOREFRONT_SESSION_SECRET=your-secure-session-secret-min-32-chars

# =============================================================================
# ADMIN CONFIGURATION (Tailscale-only)
# =============================================================================

ADMIN_DATABASE_URL=postgres://user:pass@localhost/np_admin
ADMIN_HOST=127.0.0.1
ADMIN_PORT=3001
ADMIN_BASE_URL=http://localhost:3001
ADMIN_SESSION_SECRET=your-secure-admin-session-secret-min-32-chars

# =============================================================================
# SHOPIFY - STOREFRONT API (Public access)
# =============================================================================

SHOPIFY_STORE=your-store.myshopify.com
SHOPIFY_API_VERSION=2026-01
SHOPIFY_STOREFRONT_PUBLIC_TOKEN=your-storefront-public-token
SHOPIFY_STOREFRONT_PRIVATE_TOKEN=your-storefront-private-token

# =============================================================================
# SHOPIFY - CUSTOMER ACCOUNT API (OAuth)
# =============================================================================
# Shop ID is the numeric ID found in your Shopify admin URL (e.g., admin.shopify.com/store/71655391511)

SHOPIFY_CUSTOMER_SHOP_ID=71655391511
SHOPIFY_CUSTOMER_CLIENT_ID=your-customer-client-id
SHOPIFY_CUSTOMER_CLIENT_SECRET=your-customer-client-secret

# =============================================================================
# SHOPIFY - ADMIN API OAuth (HIGH PRIVILEGE - Admin binary only)
# =============================================================================

SHOPIFY_ADMIN_CLIENT_ID=your-admin-client-id
SHOPIFY_ADMIN_CLIENT_SECRET=your-admin-client-secret

# =============================================================================
# CLAUDE API (Admin binary only)
# =============================================================================

CLAUDE_API_KEY=your-claude-api-key

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics 4 (optional - analytics disabled if not set)
GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta (Facebook) Pixel (optional)
META_PIXEL_ID=1234567890123456

# Google Ads Conversion Tracking (optional)
GOOGLE_ADS_ID=AW-1234567890
GOOGLE_ADS_CONVERSION_LABEL=AbCdEfGhIjKlMnOp

# TikTok Pixel (optional)
TIKTOK_PIXEL_ID=C0123456789ABCDEF0123456789ABCDEF01234567

# Pinterest Tag (optional)
PINTEREST_TAG_ID=1234567890123

# Snapchat Pixel (optional)
SNAPCHAT_PIXEL_ID=12345678-1234-1234-1234-123456789012

# Microsoft/Bing UET Tag (optional)
MICROSOFT_UET_ID=12345678

# Twitter/X Pixel (optional)
TWITTER_PIXEL_ID=o1234

# Mixpanel Product Analytics (optional)
MIXPANEL_PROJECT_TOKEN=your-mixpanel-token

# Crazy Egg Heatmaps & A/B Testing (optional)
CRAZY_EGG_ACCOUNT_ID=12345678

# =============================================================================
# ERROR TRACKING
# =============================================================================

SENTRY_DSN=https://key@sentry.io/project
SENTRY_DSN_PUBLIC=https://public-key@sentry.io/project
SENTRY_ENVIRONMENT=development
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=1.0

# =============================================================================
# OPENAI API (Admin binary only - for tool selection embeddings)
# =============================================================================

OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# SLACK INTEGRATION (Admin binary only - for write operation confirmations)
# =============================================================================
# Optional: If not set, write operations execute without Slack approval

SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CHANNEL_ID=C0123456789

# =============================================================================
# KLAVIYO (Optional - newsletter subscription and campaign management)
# =============================================================================
# Required scopes: Profiles (Full), Campaigns (Full), List (Read), Subscriptions (Full)
# Both variables must be set together for Klaviyo integration to be enabled

KLAVIYO_API_KEY=pk_your-klaviyo-private-api-key
KLAVIYO_LIST_ID=your-newsletter-list-id

# =============================================================================
# EMAIL (Admin binary only)
# =============================================================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@nakedpineapple.com
